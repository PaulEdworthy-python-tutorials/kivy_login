<LoginScreen>
    md_bg_color: 51/255, 51/255, 51/255, 1
    MDCard:
        orientation: 'vertical'
        size_hint: None, None
        size: 300, 450
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: 5
        padding: 25
        spacing: 25

        MDLabel:
            id: welcome_label
            text: 'Welcome'
            font_size: 40
            halign: 'center'
            size_hint_: None
            height: self.texture_size[1]
            padding_y: 10

        MDTextField:
            id: user
            mode: 'round'
            hint_text: 'username'
            icon_right: 'account'
            size_hint_x: None
            width: 200
            font_size: 16
            pos_hint: {'center_x': 0.5}

        MDTextField:
            id: password
            mode: 'round'
            hint_text: 'password'
            icon_right: 'eye-off'
            size_hint_x: None
            width: 200
            font_size: 16
            pos_hint: {'center_x': 0.5}
            password: True
        MDCard:
            orientation: 'horizontal'
            size_hint: None, None
            size: 200, 75
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            padding: 25
            spacing: 25

            MDRoundFlatButton:
                text: 'LOGIN'
                font_size: 12
                pos_hint: {'center_y': 0.5}
                on_press: app.logger()

            MDRoundFlatButton:
                text: 'CLEAR'
                font_size: 12
                pos_hint: {'center_y': 0.5}
                on_press: app.clear()
        Widget:
            size_hint: None, None
            size: 200, 25